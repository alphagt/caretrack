<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Pit Crew" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "App_Name" %>">

    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= yield(:head) %>
  </head>

  <body>
 	<%= yield :nav %>		
	<div id="outter-container-area" class="container-fluid">
		<div class="row">
			<div id="alert-area" class="col-md-12">
				<% if notice %>
					<p class="alert alert-success"><%= notice %></p>
				<% end %>
				<% if alert %>
					<p class="alert alert-danger"><%= alert %></p>
				<% end %>
				<%= yield %>
			</div>
		</div>
		<div class="row">
			<div id="main-content-area" class="col-md-12">
				<% if content_for?(:sidebar) %>
					<div id="sidebar" class="col-md-1"> 
						<h3>Actions</h3>
						<%= yield :sidebar %>
					</div>
				<% else %>
					<% if content_for?(:sidebarwide) %>
						<div id="sidebarwide" class="col-md-2"> 
							<h3>Actions</h3>
							<%= yield :sidebarwide %>
						</div>
					<% end %>
				<% end %>
            	<% if content_for?(:sidebarwide) %>
            		<div id="content" class="col-md-10 container-fluid">
            	<% else %>
            		<div id="content" class="col-md-11 container-fluid">
            	<% end %>
            	<%= yield(:main) %>
			</div>
		</div>
	</div>
  </body>
</html>
